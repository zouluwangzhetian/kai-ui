$prefix = 'k-'

// base
$font-family = "Helvetica Neue",Helvetica,"PingFang SC","Hiragino Sans GB","Microsoft YaHei","微软雅黑",Arial,sans-serif
$line-height = 1.5

//font-size
$font-size = 14px
$font-size-mini = 13px

// color
$white-color = #fff
$primary-color = #4CAF50
$primary2-color = rgba($primary-color, .45)
$primary3-color = rgba($primary-color, .15)
$link-color = $primary-color
$blue-color = #03A9F4 // info
$green-color = #8BC34A // success
$yellow-color = #FFC107 // warn
$red-color = #F44336 // danger

$dark-color = #333333
$dark2-color = rgba($dark-color, .85)
$dark3-color = rgba($dark-color, .75)
$dark4-color = rgba($dark-color, .65)
$dark5-color = rgba($dark-color, .55)

$gray-color = #c1c1c1
$gray2-color = rgba($gray-color, .85)
$gray3-color = rgba($gray-color, .65)
$gray4-color = rgba($gray-color, .45)
$gray5-color = rgba($gray-color, .25)

// component
$button-prefix = $prefix + 'btn'
$switch-prefix = $prefix + 'switch'
$radio-prefix = $prefix + 'radio'
$checkbox-prefix = $prefix + 'checkbox'
$row-prefix = $prefix + 'row'
$col-prefix = $prefix + 'col'
$input-prefix = $prefix + 'input'
$select-prefix = $prefix + 'select'
$icon-prefix = $prefix + 'icon'
$notify-prefix = $prefix + 'notify'
$modal-prefix = $prefix + 'modal'

// notify
$notify-container-width = 350px
$notify-content-padding = 10px 15px
$notify-mask-zindex = 1000
$notify-container-zindex = 1001

// border
$border-radius-size = 4px

// animate
$transition-time = .2s
