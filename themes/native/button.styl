btn-color($color)
  $renderColor = lookup('$' + $color + '-color')
  background-color $renderColor
  border 1px solid $renderColor
  color $white-color
  &:hover
    background-color lighten($renderColor, 5) !important
    border 1px solid lighten($renderColor, 5) !important

.{$button-prefix}
  padding 8px 15px
  background-color $white-color
  border 1px solid $gray-color
  border-radius $border-radius-size
  box-shadow 0 1px 1px 0 $gray3-color
  outline none
  cursor pointer
  font-size $font-size-mini
  &:hover
    border 1px solid $primary-color
    color $primary-color
  +.{$button-prefix}
    margin-left 10px
  &.{$button-prefix}
    &-primary
      btn-color('primary')
    &-green
      btn-color('green')
    &-blue
      btn-color('blue')
    &-yellow
      btn-color('yellow')
    &-red
      btn-color('red')
    &-gray
      btn-color('gray')
    &-l
      padding 10px 20px
    &-s
      padding 5px 10px
    &-xs
      padding 2px 6px
    &-text, &-no-border
      border none
      box-shadow none
      &:hover
        border none
